/* pages/yearCalculation/yearCalculation.wxss */


.year-calculation{
 padding: 20rpx;
  margin: 0 auto;
}
.year-calculation .section{
  margin: 100rpx auto;
  overflow: auto;
  font-size: 28rpx;
}
.year-calculation  .section .tit{
  float: left;
  margin-right: 10rpx;
  width: 300rpx;
  text-align: right;
  margin-top:10rpx;
}
.year-calculation .section input,.year-calculation .section .picker{
  border: 1px solid #ccc;
  float: left;
  width: 150rpx;
  margin-right: 10rpx;
  padding-left:10rpx ;
  height: 50rpx;
  line-height: 50rpx;
}
.year-calculation .section .picker {
  position: relative;
}
.year-calculation .section .picker .arrow{
   width:0;
   height:0;
   border-left:12rpx solid transparent ;
   border-right:12rpx solid  transparent;
   border-top:20rpx solid #ccc;
   position: absolute;
   display: block;
   right: 20rpx;
   top:50%;
   z-index: -1;
   margin-top: -10rpx;
}
.year-calculation .section .des{
  margin-top:10rpx;
  float: left;
}
.year-calculation .bonanza{
  margin: 100px auto;
  border: 1px solid #ccc;
  font-size: 28rpx;
  width:300rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 10rpx;
}